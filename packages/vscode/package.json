{
    "name": "remedy-vscode",
    "displayName": "remedy hypermedia server",
    "description": "Language support for remedy hypermedia server partial files",
    "categories": ["Programming Languages", "Formatters", "Linters"],
    "keywords": ["remedy", "hypermedia", "hypermedia server", "htmx", "bun", "node", "typescript", "javascript"],
    "icon": "./assets/cross-both.png",
    "version": "0.2.5",
    "publisher": "niarada",
    "engines": {
        "vscode": "^1.86.0"
    },
    "license": "0BSD",
    "repository": {
        "type": "git",
        "url": "https://github.com/niarada/remedy.git"
    },
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "partial",
                "aliases": ["remedy"],
                "extensions": [".part"],
                "configuration": "./grammars/remedy.json",
                "icon": {
                    "light": "./assets/icon-light.png",
                    "dark": "./assets/icon-dark.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "partial",
                "scopeName": "source.part",
                "path": "./dist/remedy.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.block.typescript": "typescript",
                    "meta.embedded.block.html": "html"
                },
                "unbalancedBracketScopes": [
                    "keyword.operator.relational",
                    "storage.type.function.arrow",
                    "keyword.operator.bitwise.shift",
                    "meta.brace.angle",
                    "punctuation.definition.tag"
                ]
            }
        ],
        "configuration": {
            "type": "object",
            "title": "remedy language server configuration",
            "properties": {
                "remedy.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": ["off", "messages", "verbose"],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "dependencies": {
        "@types/node": "^20.11.25",
        "@types/vscode": "^1.87.0",
        "@volar/vscode": "^2.1.2",
        "typescript": "^5.4.2",
        "volar-service-html": "^0.0.31",
        "volar-service-typescript": "^0.0.31",
        "vscode-languageclient": "^9.0.1"
    }
}
