{
    "name": "remedy-vscode",
    "displayName": "remedy hypermedia server",
    "description": "Language support for remedy hypermedia server partial files",
    "categories": [
        "Programming Languages",
        "Formatters",
        "Linters"
    ],
    "keywords": [
        "remedy",
        "hypermedia",
        "hypermedia server",
        "htmx",
        "bun",
        "node",
        "typescript",
        "javascript"
    ],
    "icon": "./assets/cross-both.png",
    "version": "0.2.17",
    "publisher": "niarada",
    "engines": {
        "vscode": "^1.86.0"
    },
    "license": "0BSD",
    "repository": {
        "type": "git",
        "url": "https://github.com/niarada/remedy.git"
    },
    "main": "./dist/extension.js",
    "activationEvents": [
        "onLanguage:remedy"
    ],
    "contributes": {
        "languages": [
            {
                "id": "remedy",
                "extensions": [
                    ".part"
                ],
                "icon": {
                    "light": "./assets/icon-light.png",
                    "dark": "./assets/icon-dark.png"
                }
            },
            {
                "id": "remedy-template"
            }
        ],
        "grammars": [
            {
                "language": "remedy",
                "scopeName": "source.remedy",
                "path": "./dist/remedy.tmLanguage.json",
                "embeddedLanguages": {
                    "source.remedy.template": "source.remedy.template"
                }
            },
            {
                "language": "remedy-template",
                "scopeName": "source.remedy.template",
                "path": "./dist/template.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "@types/node": "^20.11.28",
        "@types/vscode": "^1.87.0",
        "@volar/vscode": "^2.1.2",
        "chevrotain": "^10.5.0",
        "typescript": "^5.4.2",
        "volar-service-html": "^0.0.34",
        "volar-service-typescript": "^0.0.34",
        "vscode-languageclient": "^9.0.1"
    }
}
