#!/usr/bin/env bun

import { $ } from "bun";

if (process.argv.includes("--hot")) {
    await $`${process.argv[0]} --hot ${process.argv[1]} --is-hot`;
} else {
    const { info, serve } = await import("@niarada/remedy");
    serve();
    if (process.argv.includes("--is-hot")) {
        info("server", "running hot");
    }
}
